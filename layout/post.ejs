  <div class="w3-row-padding">

    <div class="w3-container w3-white w3-margin w3-padding-large">

      <div class="w3-center">
        <h3><%= page.title %></h3>
        <h5><span class="w3-opacity"><%- full_date(page.date,'MMMM Do YYYY') %></span></h5>
      </div>

      <div class="w3-justify">

