<div class="w3-container">
  <% if (site.posts && site.posts.length > 1) { %>
    <!-- Pagination -->
    <div class="w3-center w3-padding-32">

      <% if (page.prev || page.next) { %>

	<div class="w3-bar w3-button">
	  <% if (page.prev){ %>
	    <a href="<%- config.root %><%- page.prev_link %>" class="w3-bar-item">
	      <%= __('上一页') %>
	    </a>
	  <% } else { %>
	    <span class="w3-bar-item"><%= __('') %></span>
	  <% } %>
	</div>

	<div class="w3-bar w3-button">
	  <% if (page.next){ %>
	    <a href="<%- config.root %><%- page.next_link %>"
	       class="w3-bar-item"><%= __('下一页') %>
	    </a>
	  <% } else { %>
	    <span class=" w3-bar-item"><%= __('') %></span>
	  <% } %>
	</div>

      <% } %>
    </div>
  <% } %>
