<div class="w3-container w3-white w3-padding-32">

  <% page.posts.each(function(item){ %>

    <div class="w3-row-padding">

      <div class="w3-container">
	<h5 class="w3-opacity"><a class="rounded-pill badge" href="<%- config.root %><%= item.path %>"><%= item.title %></a></h5>
	<h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i><%- date(item.date) %></h6>
	<p><%- item.excerpt %></p>
	<hr>
      </div>

    </div>
  <% }) %>

  <%- partial('_partial/pagination') %>

</div>
